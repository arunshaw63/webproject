            </tr>
          </thead>
          <tbody>
             <% if(records.length >0){
            records.forEach(function(row){
            %>
            <tr>
              <td><h5><%= row.password_category %></h5></td>
             
              <td><a class="btn btn-primary btn-xs" href="/passwordCategory/edit/<%= row.id %>"><i class="fa fa-edit"></i></a>
                <a class="btn btn-danger btn-xs" href="/passwordCategory/delete/<%= row.id %>"><i class="fa fa-trash"></i></a>
              </td>
            </tr>
